<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/v5_0_1_flipper_head_blue_background"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/exchange_gohome"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/v5_0_1_flipper_head_title_wrapper_background"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/v5_0_1_flipper_head_back" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="24dip"
            android:layout_gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_separator" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="8dip"
            android:text="調撥"
            android:textColor="@color/textview_color_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/exchange_refresh"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/v5_0_1_flipper_head_title_wrapper_background"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/refresh_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="378dp"
        android:background="@drawable/v5_0_1_friend_search_bg"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/exchange_invoicenosearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="8dip"
            android:hint="请输入調撥單號"
            android:paddingRight="30dip"
            android:singleLine="true"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/exchange_barcode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="8dip"
            android:hint="请刷入條碼"
            android:imeOptions="actionNone"
            android:paddingRight="30dip"
            android:singleLine="true"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/exchange_frame_out"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="8dip"
            android:hint="请刷入調出料架"
            android:imeOptions="actionNone"
            android:paddingRight="30dip"
            android:singleLine="true"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/exchange_frame_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="8dip"
            android:hint="请刷入調入料架"
            android:imeOptions="actionNone"
            android:paddingRight="30dip"
            android:singleLine="true"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/exchange_log"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_margin="8dip"
            android:background="@drawable/edittext_readonly_bg"
            android:drawablePadding="8dip"
            android:enabled="false"
            android:imeOptions="actionNone"
            android:paddingRight="30dip"
            android:textSize="@dimen/textview_textsize" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/exchange_display"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="#80333333"
            android:dividerHeight="1px"
            android:listSelector="#00000000" >
        </ListView>
    </HorizontalScrollView>

</LinearLayout>