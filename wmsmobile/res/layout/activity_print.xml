<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/v5_0_1_flipper_head_blue_background"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/printmtllab_gohome"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/v5_0_1_flipper_head_title_wrapper_background"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/v5_0_1_flipper_head_back" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="24dip"
            android:layout_gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_separator" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="8dip"
            android:text="列印進料標籤"
            android:textColor="@color/textview_color_title"
            android:textSize="@dimen/textview_textsize_big"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/printmtllab_commit"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/v5_0_1_flipper_head_title_wrapper_background"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/commit_button" />
    </LinearLayout>
    
        <ListView
            android:id="@+id/lvmachine"
            android:layout_width="fill_parent"
            android:cacheColorHint="#00000000"
            android:layout_height="100dp" >
        </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="8dp" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/printmtllab_tvemp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Employee:"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/textview_textsize" />

            <EditText
                android:id="@+id/printmtllab_edtemp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:background="@drawable/edittext_bg"
                android:imeOptions="actionNone"
                android:padding="8dip"
                android:singleLine="true"
                android:textColor="@color/red" 
                android:textSize="@dimen/edittext_textsize_small" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_originalbarcode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="扫描原始码:"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/textview_textsize" />

            <EditText
                android:id="@+id/edt_originalbarcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:background="@drawable/edittext_bg"
                android:padding="8dip"
                android:singleLine="true"
                android:gravity="top"
                android:textSize="@dimen/edittext_textsize_small" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/printmtllab_tvpn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="PN:"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/textview_textsize" />

            <EditText
                android:id="@+id/printmtllab_edtpn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:background="@drawable/edittext_bg"
                android:imeOptions="actionNone"
                android:padding="8dip"
                android:enabled="false"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/edittext_textsize_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/printmtllab_tvqty"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="QTY:"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/textview_textsize" />

            <EditText
                android:id="@+id/printmtllab_edtqty"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:background="@drawable/edittext_bg"
                android:imeOptions="actionNone"
                android:padding="8dip"
                android:singleLine="true"
                android:textSize="@dimen/edittext_textsize_small" />
            <TextView
                android:id="@+id/printmtllab_tvlotno"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="LOT NO:"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/textview_textsize" />
            <EditText
                android:id="@+id/printmtllab_edtlotno"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@drawable/edittext_bg"
                android:imeOptions="actionNone"
                android:padding="5dip"
                android:singleLine="true"
                android:enabled="false"
                android:textColor="@color/red"
                android:textSize="@dimen/edittext_textsize_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/printmtllab_tvdc"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="D/C:"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/textview_textsize" />

            <EditText
                android:id="@+id/printmtllab_edtdc"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:background="@drawable/edittext_bg"
                android:imeOptions="actionNone"
                android:padding="8dip"
                android:singleLine="true"
                android:enabled="false"
                android:textColor="@color/red"
                android:textSize="@dimen/edittext_textsize_small"/>
            <TextView
                android:id="@+id/printmtllab_tvvendor"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Vendor:"
                android:textColor="@color/textview_color"
                android:textSize="@dimen/textview_textsize" />

            <EditText
                android:id="@+id/printmtllab_edtvc"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@drawable/edittext_bg"
                android:imeOptions="actionNone"
                android:padding="5dip"
                android:singleLine="true"
                android:enabled="false"
                android:textColor="@color/red"
                android:textSize="@dimen/edittext_textsize_small" />
        </LinearLayout><!-- 
       <RadioGroup
            android:id="@+id/rg_barcodetype" 
            android:layout_width="fill_parent"
            android:orientation="horizontal" 
            android:layout_height="wrap_content">
　　                      <RadioButton 
            android:layout_width="wrap_content"
            android:text="普通标签"
            android:id="@+id/rb1"
            android:layout_height="wrap_content"
            android:checked="true"
            />
　　                      <RadioButton 
            android:layout_width="wrap_content"
            android:text="RoHS标签"
            android:id="@+id/rb2"
            android:layout_height="wrap_content"
            />
　　                      <RadioButton 
            android:layout_width="wrap_content"
            android:text="HF标签"
            android:id="@+id/rb3"
            android:layout_height="wrap_content"
            />
　　            </RadioGroup> -->
       <RadioGroup
            android:id="@+id/rg_printqty" 
            android:layout_width="fill_parent"
            android:orientation="horizontal" 
            android:layout_height="wrap_content"
            android:visibility="visible" >
           
           <RadioButton 
            android:layout_width="wrap_content"
            android:text="新標籤"
            android:id="@+id/rb_new"
            android:layout_height="wrap_content"
            android:checked="false"
            />
           
            <RadioButton 
            android:layout_width="wrap_content"
            android:text="退料"
            android:id="@+id/rb_return"
            android:layout_height="wrap_content"
            android:checked="false"
            />
　　                           
　　                      <RadioButton 
            android:layout_width="wrap_content"
            android:text="補印"
            android:id="@+id/rb_print"
            android:layout_height="wrap_content"
            android:checked="false"
            />
　　                      <RadioButton 
            android:layout_width="wrap_content"
            android:text="分包裝"
            android:id="@+id/rb_package"
            android:layout_height="wrap_content"
            android:checked="true"
            />　
　　            </RadioGroup>
        
    </LinearLayout>

</LinearLayout>